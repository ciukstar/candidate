
##{idJobName}
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    

##{idBadgeApplicants}
    position: absolute
    top: -4px
    right: -4px

button.btn-link, ul.list-group > li a, table a
    text-decoration: none
  
button.btn-link:hover, ul.list-group > li a:hover, table a:hover
    text-decoration: underline

##{idListCandidate}

    li.list-group-item
        display: grid
        grid-template-columns: 48px auto 48px
        grid-template-rows: auto
        grid-template-areas: "photo candidate actions" "photo weight weight"
        gap: 0.5rem
        
        img.photo
          grid-area: photo
          
        a.candidate
          grid-area: candidate
          align-self: center
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          
        div.actions
          grid-area: actions
          
        a.weight
          grid-area: weight
